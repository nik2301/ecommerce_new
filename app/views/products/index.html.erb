<h1>Products</h1>

<% cart_id = current_cart if user_signed_in?%>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th> </th>
      <th> </th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= link_to "Generate CSV", export_products_path(format: :csv) %> &emsp;
    <%= link_to "Email CSV", email_csv_path %> &emsp; <br>

    <%= form_tag(upload_path, multipart: true) do %>
      <%= label_tag :upload_csv %> &emsp;
      <%= file_field_tag :attachment %>
      <%= submit_tag "Upload" %>
    <% end %>

    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.images.first.variant(resize: "50x70") unless product.images.first.nil? %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>

        <% cart_item = find_cart_item(product) if user_signed_in? %>
        <% if cart_item.present? && cart_item.quantity > 0 %>
          <td><%= button_to '-', deduct_from_cart_path, params: {product_id: product.id, cart_id: cart_id }, method: :get %>
          <td><%= cart_item.quantity %>
          <td><%= button_to '+', add_to_cart_path, params: {product_id: product.id, cart_id: cart_id }, method: :get %>
        <% else %>
          <td><%= button_to 'Add To Cart', add_to_cart_path, params: {product_id: product.id, cart_id: cart_id }, method: :get %>
        <% end %>
        <hr>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
